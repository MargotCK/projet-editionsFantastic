{% extends 'base.html.twig' %}

{% block h1 %}Gestion des auteurs {% endblock %}

{% block body %}
    
    <a class="btn btn-info" href="{{ path('app_auteur_new') }}">Ajouter</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for auteur in auteurs %}
            <tr>
                <td>{{ auteur.id }}</td>
                <td>{{ auteur.prenom }}</td>
                <td>{{ auteur.nomAuteur }}</td>
                <td>
                    <a class="btn btn-warning"  href="{{ path('app_auteur_show', {'id': auteur.id}) }}">Fiche</a>
                    <a class="btn btn-primary"  href="{{ path('app_auteur_edit', {'id': auteur.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun résultat</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
