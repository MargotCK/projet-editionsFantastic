{% extends 'base.html.twig' %}

{% block h1 %}Gestion des thèmes{% endblock %}

{% block body %}

    <a class="btn btn-info"href="{{ path('app_theme_new') }}">Ajouter</a>
    
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for theme in themes %}
            <tr>
                <td>{{ theme.id }}</td>
                <td>{{ theme.categorieTheme }}</td>
                <td>
                    <a class="btn btn-warning" href="{{ path('app_theme_show', {'id': theme.id}) }}">Fiche</a>
                    <a class="btn btn-primary" href="{{ path('app_theme_edit', {'id': theme.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun résultat</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
