{% extends 'base.html.twig' %}

{% block h1 %}Gestion des produits({{ livres|length }}){% endblock %}

{% block body %}

    <a class="btn btn-info" href="{{path('ajouterLivreName')}}">Ajouter</a>

    {% if livres %}
        
        <table class="table table-info text-center table-bordered table-hover mt-4">
            <thead class="table-warning">
                <tr>
                    <th>Id</th>
                    <th>Titre</th>
                    <th>1ère de couverture</th>
                    <th>Prix (€)</th>
                    <th>Quantité</th>
                    <th>Fiche</th>
                    <th>Modifier</th>
                    <th>Supprimer</th>
                </tr>
            </thead>

            <tbody>
                {% for livre in livres %}
                    {#{ dump(livre) }#}
                    <tr>
                        <td>{{ livre.id }}</td>
                        <td>{{ livre.titre|capitalize }}</td>
                        <td>{{ livre.couv1|capitalize }}</td>
                        <td>{{ livre.prixUnitaire }}</td>
                        <td>{{ livre.quantiteStockLivre }}</td>
                        <td>
                            <a class="btn btn-warning" href="{{path('ficheName', {'id':livre.id}) }}">F</a>
                        </td>
                        <td>
                            <a class="btn btn-success" href="{{path('modifierLivreName', {'id':livre.id}) }}">M</a>
                        </td>
                        <td>
                            <a 
                                class="btn btn-danger"
                                onclick="return confirm('Etes-vous sûr de vouloir supprimer cet article ?')" 
                                href="{{ path('supprimerLivreName', {'id': livre.id}) }}"
                            >Supprimer</a>
                        </td>
                    </tr>

                {% endfor %}
            </tbody>
        </table>
        
    {% else %}
        <h4 class="text-danger text-center fst-italic mt-4"> Aucun produit</h4>
    
    {% endif %}

{% endblock %}
